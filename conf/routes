# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    @controllers.Application.index

# Links
GET         /links               @controllers.LinksController.findAll(limit: Int ?= 10, offset: Int ?= 0)
GET         /links/search        @controllers.LinksController.find(tags: String)
POST        /links               @controllers.LinksController.create()

# Tags
GET         /tags                @controllers.TagsController.findAll()
