# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    @controllers.Application.index

# Links
GET         /links               @controllers.LinksController.findAll(limit: Int ?= 10, offset: Int ?= 0, tags: Option[String])
GET         /links/search        @controllers.LinksController.find(filters: Option[String], q : Option[String])
POST        /links               @controllers.LinksController.create()

# Tags
GET         /tags                @controllers.TagsController.findAll()
